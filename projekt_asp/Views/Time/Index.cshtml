@model TimeModel;
@{ ViewData["Title"] = "Employee Panel";
                Layout = "_Panel";
                DateTime date = DateTime.UtcNow;
    }
<link href="~/css/Msg.css" rel="stylesheet" type="text/css" />
<link href="~/css/Homepage.css" rel="stylesheet" type="text/css"/>

<div class="mask d-flex align-items-center h-100  mt-5">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                <div class="card" style="border-radius: 15px;">
                    <div class="card-body p-5 pb-4">
                        <h2 class="text-uppercase text-center mb-5">
                            Add the number of hours worked today
                        </h2>

                        <form asp-controller="Time" asp-action="Add_time" method="post">

                            <div class="form-outline mb-4">

                                <label class="h5 ">Date</label>
                                <label class="h5">@date.ToShortDateString()</label>

                            </div>

                            <div class="form-outline mb-4">

                                <label asp-for="Hours_worked" class="form-label">Hours_worked</label>
                                <input asp-for="Hours_worked" class="form-control form-control-lg" placeholder="Hours_worked" required>

                            </div>
                            <div class="d-flex justify-content-center">
                                <button class="btn btn-dark btn-block btn-lg" type="submit">Add</button>
                            </div>
                        </form>
</div>
</div>
</div>
</div>
</div>
</div>
