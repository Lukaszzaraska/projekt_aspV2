@model projekt_asp.Models.LoginModel;
@{
    ViewData["Title"] = "Homepage login";
    Layout = "_Empty";
}
<link href="~/css/Homepage.css" rel="stylesheet" type="text/css" />
<div class="text-center">
    <h1 class="display-4">Employee Controls Program </h1>
    <div class="h3">Log in to access the panel</div>
    <div class="d-flex align-items-center justify-content-center mt-3">
        <div id="forms">
        <form class="form-signin mt-4" asp-controller="Account" asp-action="Login" method="post">
            <h1 class="h3 mb-3 font-weight-normal">Logging</h1>
            <label asp-for="Name" class="sr-only">Login</label>
            <input asp-for="Name" class="form-control" placeholder="Login" required autofocus>
            <label asp-for="Password" class="sr-only">Password</label>
            <input asp-for="Password" type="password" class="form-control mt-2" placeholder="Password" required>
            <input asp-for="ReturnUrl" type="hidden" class="hide">
            <a class="font-italic font-weight-bold text-info mt-1" asp-controller="Employee" asp-action="Register">No account ? Sign up !</a>
            <button class="btn btn-lg btn-dark btn-block mt-3" type="submit">Log in</button>
        </form>
        </div>
    </div>

</div>
