
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/Bs.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <span class="ml-5">&nbsp;</span>
                <a class="navbar-brand ml-5" asp-area="" asp-controller="Account" onclick="location.href='@Url.Action("Login", "Account")'" asp-action="Login">User panel "@ViewData["login"]"</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary ml-1 pl-1 " asp-area="" asp-controller="Time" asp-action="Index">Add hours</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary ml-1" asp-area="" asp-controller="Time" asp-action="Your_time">Your hours</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary ml-1" asp-area="" asp-controller="Employee" asp-action="Lists_workers">List of employees</a>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary ml-1" asp-area="" asp-controller="Msg" asp-action="Index">Send/View Msg</a>

                        </li>

                        <li class="nav-item d-flex">
                            <a class="nav-link btn btn-primary ml-1" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>

                        </li>
                    </ul>
                   
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - projekt_asp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
