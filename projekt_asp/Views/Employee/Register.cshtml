@model projekt_asp.Models.RegisterModel;
@{
    ViewData["Title"] = "Homepage register";
    Layout = "_Empty";
}
<link href="~/css/Homepage.css" rel="stylesheet" type="text/css" />
<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Registration Form</h3>
                        <form>

                            <div class="row">
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <span asp-validation-for="Login" class="text-danger"></span>
                                        <label asp-for="Login" class="sr-only">Login</label>
                                        <input asp-for="Login" class="form-control  mt-2" placeholder="Login" required>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <label asp-for="Password" class="sr-only">Password</label>
                                    <input asp-for="Password" type="password" class="form-control mt-2" placeholder="Password" required>



                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 d-flex align-items-center">

                                    <span asp-validation-for="Surname" class="text-danger"></span>
                                    <label asp-for="Surname" class="sr-only">Surname</label>
                                    <input asp-for="Surname" class="form-control  mt-2" placeholder="Surname" required />


                                </div>
                                <div class="col-md-6 mb-4 d-flex align-items-center">

                                    <span asp-validation-for="Name" class="text-danger"></span>
                                    <label asp-for="Name" class="sr-only">Name</label>
                                    <input asp-for="Name" class="form-control  mt-2" placeholder="Name" required>


                                </div>

                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">

                                    <span asp-validation-for="Email" class="text-danger"></span>
                                    <input asp-for="Email" class="form-control mt-2" placeholder="Email" required>
                                    <label asp-for="Email" class="sr-only form-label">Email </label>
                                </div>
                            
                            </div>

                            <div class="row">
                                <div class="col-12">
                                    <label asp-for="position" class="form-label select-label">Position</label>
                                    <select class="select form-control-lg" asp-for="position" asp-items="Html.GetEnumSelectList<RegisterModel.Position>()">
                                        <option value="1" disabled>Choose option</option>
                                    </select>



                                </div>
                            </div>
                            <p>@ViewBag.ErrorMessage</p>
                            <div class="mt-4 pt-2">
                                <input class="btn btn-primary btn-lg" type="submit" value="Submit" />
                            </div>
                            <a class="font-italic text-info  mt-2" asp-controller="Home" asp-action="Index">Return to login</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>