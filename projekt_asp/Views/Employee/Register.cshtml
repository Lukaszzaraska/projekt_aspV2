@model projekt_asp.Models.RegisterModel;
@{
    ViewData["Title"] = "Homepage register";
    Layout = "_Empty";
}
<link href="~/css/Homepage.css" rel="stylesheet" type="text/css" />
<section class="vh-100 bg-image" style="background-image: url('https://images.unsplash.com/photo-1555212697-194d092e3b8f?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=687&q=80'); background-repeat: no-repeat; background-size: cover; ">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5 pb-4">
                            <h2 class="text-uppercase text-center mb-5">Create an account</h2>

                            <form asp-controller="Employee" asp-action="Add" method="post">

                                <div class="form-outline mb-4">

                                    <label asp-for="Login" class="form-label">Login</label>
                                    <input asp-for="Login" class="form-control form-control-lg" placeholder="Login" required>
                                    <span asp-validation-for="Login" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">

                                    <label asp-for="Email" class="form-label">Email</label>
                                    <input asp-for="Email" class="form-control form-control-lg" placeholder="Email" required>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">

                                    <label asp-for="Password" class="form-label">Password</label>
                                    <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Password" required>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">

                                    <label asp-for="Name" class="form-label">Name</label>
                                    <input asp-for="Name" class="form-control form-control-lg" placeholder="Name" required>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-outline mb-4">

                                    <label asp-for="Surname" class="form-label">Surname</label>
                                    <input asp-for="Surname" class="form-control form-control-lg" placeholder="Surname" required>
                                    <span asp-validation-for="Surname" class="text-danger"></span>
                                </div>
                                <div class="form-outline mb-4">
                                    <label asp-for="position" class="form-label">Position</label>
                                    <select class="form-control mt-2" asp-for="position" asp-items="Html.GetEnumSelectList<RegisterModel.Position>()"></select>
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button class="btn btn-dark btn-block btn-lg" type="submit">Register</button>
                                </div>
                                <p class="text-danger">@ViewBag.ErrorMessage</p>
                        

                                <p class="text-center text-muted mt-5 mb-0">Have already an account? <a class="fw-bold text-body" asp-controller="Home" asp-action="Index"><u>Login here</u></a></p>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>